<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <title>Learning Management System</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-900 text-white font-sans">
    <!-- Header -->
    <%- include('header.ejs') %>

    <!-- Main Section -->
    <main class="p-8 max-w-6xl mx-auto">
      <!-- Admin Actions -->
      <section class="mb-4">
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/mycourses" class="bg-indigo-700 hover:bg-indigo-800 px-4 py-2 rounded-md text-white">
            My Courses
          </a>
        </div>
      </section>

      <!-- Section Header -->
      <section class="mb-4">
        <nav class="flex gap-6 px-8 pt-6 border-b border-purple-600 text-lg font-semibold">
          <span class="text-purple-400 border-b-2 border-purple-400 pb-2">Available Courses</span>
        </nav>
      </section>

      <!-- Available Courses -->
      <section>
        <% courses = courses.filter(course => course.educatorId != user.id); %>
        <% if (courses.length === 0) { %>
          <p class="text-gray-400">No courses available</p>
        <% } else { %>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <% courses.forEach(course => { %>
              <div class="bg-gray-800 p-4 rounded-lg shadow hover:shadow-lg transition">
                <!-- Thumbnail image -->
                <img src="<%= course.imageUrl %>" alt="Course Thumbnail"
                     class="w-full h-40 object-cover rounded-md mb-4" />

                <!-- Course Title -->
                <h3 class="text-lg font-semibold text-white mb-1">
                  <%= course.name %>
                </h3>

                <!-- Course Description -->
                <p class="text-sm text-gray-300 mb-2">
                  <%= course.description || "No description available." %>
                </p>

                <!-- Instructor -->
                <p class="text-sm text-gray-400 mb-1">
                  Instructor: <%= user.name %>
                </p>

                <!-- Students Placeholder -->
                <p class="text-sm text-gray-400 mb-4">
                  ðŸ‘¥ Students
                </p>

                <!-- Action Buttons -->
                <div class="flex gap-2">
                  <a href="/course/<%= course.id %>/view"
                     class="bg-purple-600 hover:bg-purple-700 px-4 py-2 rounded-md text-white">
                    View
                  </a>
                  <form action="/course/<%= course.id %>/enroll" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <button type="submit"
                            class="bg-green-600 hover:bg-green-700 px-4 py-2 rounded-md text-white">
                      Enroll
                    </button>
                  </form>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </section>
    </main>
  </body>
</html>
