<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>My Courses</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white">

  <!-- Header -->
  <header class="flex justify-between items-center p-6 bg-gray-800 shadow-md">
    <div class="text-2xl font-bold text-purple-400">Learning Management System</div>
    <button class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md">Sign Out</button>
  </header>

   <!-- Page Heading -->
   <h1 class="text-xl font-semibold text-purple-400 px-8">My Courses</h1>
  <!-- Navigation Tabs -->
  <nav class="flex gap-6 px-8 pt-6 border-b border-purple-600 text-lg font-semibold">
    <button id="tab-created" class="text-purple-400 border-b-2 border-purple-400 pb-2">Created</button>
    <button id="tab-enrolled" class="text-gray-400 hover:text-white pb-2">Enrolled</button>
  </nav>

  <main class="p-8 max-w-6xl mx-auto">

    <!-- Created Courses Section -->
    <section id="created-section">
      <% if (courses.length === 0) { %>
        <p class="text-gray-400 mt-6">You haven't created any courses.</p>
      <% } else { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
          <% courses.forEach(course => { %>
            <div class="bg-gray-800 p-4 rounded-lg shadow hover:shadow-lg transition">
              <img src="<%= course.imageUrl %>" alt="Course Image" class="w-full h-40 object-cover rounded mb-4">
              <h3 class="text-lg font-semibold mb-1"><%= course.title %></h3>
              <p class="text-sm text-gray-300 mb-2"><%= course.description %></p>
              <p class="text-sm text-gray-400 mb-4">ðŸ‘¥ <%= course.students || 0 %> students</p>
              <button class="bg-indigo-600 hover:bg-indigo-700 px-3 py-1 rounded-md"><a href="/course/<%= course.id %>">View Course</a></button>
            </div>
          <% }); %>
        </div>
      <% } %>
    </section>

    <!-- Enrolled Courses Section -->
    <section id="enrolled-section" class="hidden">
    </section>

  </main>

  <!-- Tab Switch Script -->
  <script>
    const createdTab = document.getElementById('tab-created');
    const enrolledTab = document.getElementById('tab-enrolled');
    const createdSection = document.getElementById('created-section');
    const enrolledSection = document.getElementById('enrolled-section');

    createdTab.addEventListener('click', () => {
      createdTab.classList.add('text-purple-400', 'border-b-2', 'border-purple-400');
      createdTab.classList.remove('text-gray-400');

      enrolledTab.classList.remove('text-purple-400', 'border-b-2', 'border-purple-400');
      enrolledTab.classList.add('text-gray-400');

      createdSection.classList.remove('hidden');
      enrolledSection.classList.add('hidden');
    });

    enrolledTab.addEventListener('click', () => {
      enrolledTab.classList.add('text-purple-400', 'border-b-2', 'border-purple-400');
      enrolledTab.classList.remove('text-gray-400');

      createdTab.classList.remove('text-purple-400', 'border-b-2', 'border-purple-400');
      createdTab.classList.add('text-gray-400');

      enrolledSection.classList.remove('hidden');
      createdSection.classList.add('hidden');
    });
  </script>

</body>
</html>
